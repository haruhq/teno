{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    // "declarationDir": "lib",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts"
, "lib/index.js"  ],
  "exclude": [
    "node_modules",
    "lib",
  ]
}
